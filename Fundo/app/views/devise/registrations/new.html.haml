%div{:class => ".wrapper_with_padding"}
  = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = f.error_notification
    .container
      .row.centered-form
        .col-xs-8.col-sm-8.col-md-5.col-sm-offset-3.col-md-offset-3.col-xs-offset-3{:height => "300px", :style => "background-color: snow;"}
          .panel-body
            %h2 Sign up
            .form-inputs
              .col-xs-6.col-sm-6.col-md-6
                .inputWithIcon.inputIconBg
                  = f.input :first_nsme,                       |
                    required: true,                            |
                    autofocus: true,                           |
                    input_html: { autocomplete: "first_name" } |
                  %i.glyphicon.glyphicon-user{"aria-hidden" => "true"}
              .col-xs-6.col-sm-6.col-md-6
                .inputWithIcon.inputIconBg
                  = f.input :last_name,                       |
                    required: true,                           |
                    autofocus: true,                          |
                    input_html: { autocomplete: "last_name" } |
                  %i.glyphicon.glyphicon-user{"aria-hidden" => "true"}
              .col-xs-12.col-sm-12.col-md-12
                .inputWithIcon.inputIconBg
                  = f.input :email,                       |
                    required: true,                       |
                    autofocus: true,                      |
                    input_html: { autocomplete: "email" } |
                  %i.glyphicon.glyphicon-envelope{"aria-hidden" => "true"}
              .col-xs-6.col-sm-6.col-md-6
                .inputWithIcon.inputIconBg
                  = f.input :password,                                                                    |
                    required: true,                                                                       |
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), |
                    input_html: { autocomplete: "new-password" }                                          |
                  %i.glyphicon.glyphicon-asterisk{"aria-hidden" => "true"}
              .col-xs-6.col-sm-6.col-md-6
                .inputWithIcon.inputIconBg
                  = f.input :password_confirmation,              |
                    required: true,                              |
                    input_html: { autocomplete: "new-password" } |
                  %i.glyphicon.glyphicon-asterisk{"aria-hidden" => "true"}
              .col-xs-12.col-sm-12.col-md-12 
                .inputWithIcon.inputIconBg
                  = f.input :city,                       |
                    required: true,                      |
                    autofocus: true,                     |
                    input_html: { autocomplete: "city" } |
                  %i.glyphicon.glyphicon-globe{"aria-hidden" => "true"}
                  .inputWithIcon.inputIconBg
                    = f.file_field :image,                |
                      required: true,                     |
                      autofocus: true,                    |
                      input_html: { autocomplete: "IMG" } |
                .form-actions
                  = f.button :submit, "Sign up", class: "button"
                = render "devise/shared/links"
